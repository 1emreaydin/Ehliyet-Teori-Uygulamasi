<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_levha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardElevation="3dp"
        card_view:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <ImageView
                android:src="@drawable/warning"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:id="@+id/levha_url"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                />

            <TextView

                android:text="Bilgilendirme"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/kisaBilgi"
                android:layout_toRightOf="@+id/levha_url"
                android:layout_alignParentTop="true"
                android:textSize="16sp"
                />

            <TextView

                android:id="@+id/bilgilendirme"
                android:text="Burası ise detaylı bilgilendirmedir. İçeriği uzunca anlatan bilgiler bulunur."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/levha_url"
                android:layout_below="@+id/kisaBilgi"
                android:textSize="15sp"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>