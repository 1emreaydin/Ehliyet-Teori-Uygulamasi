<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp">

                <TextView
                    android:id="@+id/soruTextDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="left"
                    android:text="Bir kaza anında, yapılan ilk yardım uygulamaları ile ilgili olarak aşağıdakilerden hangisi doğru değildir?"
                    android:textColor="@android:color/white" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

            <RelativeLayout
            android:layout_margin="3dp"
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <ImageView
                android:id="@+id/resimFotoDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="100dp"/>
        </RelativeLayout>

            <RelativeLayout

                android:layout_marginTop="4dp"
                android:id="@+id/cevap1CardDialog"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
                android:background="@drawable/button_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp">

                <TextView
                    android:padding="10dp"
                    android:id="@+id/cevap1dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="Mevcut araç-gereçlerle yapılması"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

            <RelativeLayout

                android:layout_marginTop="4dp"
                android:id="@+id/cevap2CardDialog"
                app:layout_constraintTop_toBottomOf="@+id/cevap1CardDialog"
                android:background="@drawable/button_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp">

                <TextView
                    android:padding="10dp"
                    android:id="@+id/cevap2dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="Kısa devre olduğunda sistemi korumak"
                    android:textColor="@android:color/black"
                    android:layout_alignParentLeft="true" />
            </RelativeLayout>

            <RelativeLayout

                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/cevap2CardDialog"
                android:id="@+id/cevap3CardDialog"
                android:background="@drawable/button_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp">

                <TextView

                    android:padding="10dp"  android:id="@+id/cevap3dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="Lastiklerin hava basıncı kontrol edilir."
                    android:textColor="@android:color/black"
                    android:layout_alignParentLeft="true" />
            </RelativeLayout>

            <RelativeLayout

                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/cevap3CardDialog"
                android:id="@+id/cevap4CardDialog"
                android:background="@drawable/button_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp">

                <TextView
                    android:padding="10dp"
                    android:id="@+id/cevap4dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="Kural ihlalinin sonucunda sadece maddi ceza olduğunun düşünülmesi"
                    android:textColor="@android:color/black"
                    android:layout_alignParentLeft="true" />
            </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>